.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.create-btn {
  margin: 0;
  background-color: #1E90FF;
  color: white;
  border-radius: 8px;
  font-size: 16px;
}

.create-btn:last-child {
  background-color: #FF4500;
}

.room-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.room-item {
  background-color: white;
  padding: 16px;
  border-radius: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.room-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.room-id {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.room-type {
  font-size: 14px;
  color: #666;
}

.room-count {
  font-size: 14px;
  color: #1E90FF;
}

.room-item:active {
  background-color: #f5f5f5;
}