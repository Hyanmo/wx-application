/* 页面背景颜色 */
page {
  background-color: #EAECE5; /* 莫兰迪绿色系浅色背景 */
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 详情页整体布局 */
.event-detail {
  width: 90%;
  height: 80vh; /* 占满 80% 高度 */
  background: #F6F7F1; /* 柔和的莫兰迪色背景 */
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 活动封面 */
.cover {
  width: 100%;
  height: 100vh;
  border-radius: 20rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 内容区域 */
.content {
  width: 100%;
  padding: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

/* 活动标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #3E403A;
  margin-top: 20rpx;
  text-align: center;
}

/* 活动时间 */
.time {
  font-size: 28rpx;
  color: #6E7265;
  margin: 10rpx 0;
}

/* 活动地点 */
.location {
  font-size: 28rpx;
  color: #6E7265;
  display: flex;
  align-items: center;
}

/* 活动描述 */
.description {
  font-size: 28rpx;
  color: #4E504A;
  line-height: 1.6;
  text-align: justify;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
}
