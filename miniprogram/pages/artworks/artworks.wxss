.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin: 20rpx 0 30rpx;
  padding: 0 10rpx;
}

.header .title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.header .subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.nav-scroll {
  margin-bottom: 30rpx;
  white-space: nowrap;
}

.nav-items {
  display: inline-flex;
  padding: 0 10rpx;
}

.nav-item {
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  background: white;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.nav-item.active {
  background: #A8B6B1;
  color: white;
}

.artwork-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 10rpx;
}

.artwork-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transform: translateY(0);
  transition: all 0.3s;
}

.artwork-item:active {
  transform: scale(0.98);
}

.cover {
  width: 100%;
  height: 240rpx;
  background: #f0f0f0;
}

.info {
  padding: 16rpx;
}

.title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.type-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

.type-img {
  width: 100%;
  height: 100%;
}

.description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
