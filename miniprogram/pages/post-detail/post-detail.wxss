.post-container {
  padding: 20rpx;
}

.post-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.username {
  font-weight: bold;
  color: #333;
}

.post-date {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

.post-content {
  font-size: 32rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  justify-content: flex-start;
}

.post-img {
  width: 100%;
  height: 80vh;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 评论部分 */
.comment-section {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1px solid #ddd;
}

.comment-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.comment {
  display: flex;
  align-items: flex-start;
  padding: 10rpx 0;
  border-bottom: 1px solid #eee;
}

.comment-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.comment-content {
  flex: 1;
}

.comment-username {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.comment-date {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 加载更多 */
.load-more, .no-more {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 评论输入框 */
.comment-box {
  display: flex;
  align-items: center;
  padding: 10rpx;
  border-top: 1px solid #ddd;
  background-color: #f8f8f8;
}

.comment-input {
  flex: 1;
  padding: 10rpx;
  font-size: 28rpx;
  border: 1px solid #ccc;
  border-radius: 8rpx;
}

.comment-btn {
  margin-left: 10rpx;
  padding: 10rpx 20rpx;
  background-color: #1c6b3f;
  color: white;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.likes {
  font-size: 28rpx;
  color: #888;
  cursor: pointer;
  text-align: center; /* 让文本靠右 */
  display: block; /* 让 .likes 占满整行 */
  margin-top: 10rpx;
}
